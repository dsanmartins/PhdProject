<plugin>
   <extension point="org.eclipse.ui.views">
      <category
            id="mainview"
            name="AdvanSE Tools">
      </category>
      <view
            category="mainview"
            class="br.ufscar.sas.view.MainView"
            id="MainView"
            name="Mining AR Smells in SaS">
      </view>
      
      <view
            category="mainview"
            class="br.ufscar.sas.modelgraph.ArchitectureVisualization"
            id="visualization"
            name="Architecture Visualization">
      </view>
      
	</extension>
	

	<extension point="org.eclipse.ui.perspectiveExtensions"> 
        <perspectiveExtension targetID="org.eclipse.jdt.ui.JavaPerspective"> 
            <view id="MainView" 
            	minimized="false"
            	ratio="1.0f"
                relative="org.eclipse.mylyn.tasks.ui.views.tasks" 
                closeable="false"
        	    relationship="left"/> 
        </perspectiveExtension> 
    </extension> 
    
    
    
     <extension point="org.eclipse.ui.commands">
   
      <category
            name="Sample Category"
            id="br.ufscar.sas.view.commands.category">
      </category>
      <command
            name="SaS AR Code Smell"
            categoryId="br.ufscar.sas.view.commands.category"
            id="br.ufscar.sas.view.commands.ui">
      </command>
   </extension>
   
   <extension point="org.eclipse.ui.handlers">
   
      <handler
            commandId="br.ufscar.sas.view.commands.ui"
            class="br.ufscar.sas.ui.handlers.UI">
      </handler>
   </extension>
   
   <extension point="org.eclipse.ui.menus">
      <menuContribution locationURI="popup:org.eclipse.ui.popup.any">
    
            <command
                  commandId="br.ufscar.sas.view.commands.ui"
                  icon="icons/sample.gif"
                  id="br.ufscar.sas.ui.menus.ui"
                  mnemonic="S">
                  <visibleWhen>
				           <with variable="activeMenuSelection">
				            <iterate>
								<adapt type="org.eclipse.core.resources.IProject"/>
							</iterate>
				           </with>
         			</visibleWhen>
                  
            </command>
       
      </menuContribution>

   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
         <perspective
            name="AR Smells SaS"
            icon=""
            class="br.ufscar.sas.view.Perspective"
            id="br.ufscar.sas.view.Perspective">
      </perspective>
   </extension>
 
	<extension point="org.eclipse.ui.navigator.navigatorContent">
	    <commonFilter
	        description="Hides *.pj resources"
	        id="com.xyz.commonFilter.hidePj"
	        name="*.pj resources"
	        activeByDefault="true">
	        <filterExpression>
	            <and>
	                <adapt type="org.eclipse.core.resources.IResource">
	                    <test property="org.eclipse.core.resources.name" value="annotations.db"/>
	                </adapt>
	            </and>
	        </filterExpression>
	    </commonFilter>
	</extension>
	<extension point="org.eclipse.ui.navigator.viewer">
	    <viewerContentBinding
	          viewerId="org.eclipse.ui.navigator.ProjectExplorer">
	          <includes>
	            <contentExtension pattern="com.xyz.commonFilter.hidePj"/> 
	          </includes>
	    </viewerContentBinding>
	</extension>
	
</plugin>
